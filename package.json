{
  "name": "mailor",
  "version": "0.0.17",
  "description": "Mailer tools",
  "main": "lib/mailer.js",
  "bin": {
    "mailor": "bin/cli"
  },
  "scripts": {
    "build": "mkdir -p dist && cp node_modules/somedom/dist/somedom.umd.js dist/",
    "lint": "eslint bin lib public",
    "pretest": "npm run lint",
    "mocha": "NODE_ENV=test _mocha --timeout 5000 --exit --recursive -bR spec",
    "test": "npm run test:unit --",
    "test:ci": "npm run coverage && npm run report -- -r lcov",
    "test:unit": "npm run mocha -- 'tests/*.test.js'",
    "test:coverage": "npm run coverage && npm run report",
    "coverage": "nyc --silent -x '**/tests/**' -x '**/*.test.js' -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "report": "nyc report"
  },
  "files": [
    "bin/*",
    "lib/*.js",
    "dist/*.js",
    "public/*.*"
  ],
  "keywords": [
    "nodemailer",
    "templates",
    "preview",
    "maildev",
    "mailer"
  ],
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "heml": "^1.1.3",
    "live-server": "^1.2.1",
    "maildev": "^1.1.0",
    "mustache": "^3.0.1",
    "nodemailer": "^6.0.0",
    "pug": "^2.0.3",
    "wargs": "^0.9.0"
  },
  "devDependencies": {
    "axios": ">=0.18.1",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.2.2",
    "mock-stdin": "^1.0.0",
    "nyc": "^14.1.1",
    "open": ">=6.0.0",
    "somedom": "^0.1.1",
    "std-mocks": "^1.0.1",
    "tempfile": "^3.0.0",
    "testdouble": "^3.12.4"
  },
  "optionalDependencies": {
    "nsfw": "^1.2.2"
  }
}
